    <script>
        $(function() {
            var count1 = 0;
            var count2 = 0;
            $("#xt1").on("click", function(e) {
                e.preventDefault();
                count1 += 1;
                if (count1 < 4) {
                    $("#ph1").find(".product:hidden:lt(8)").fadeIn("slow");
                } else {
                    $("#xt1").hide();
                    $("#tx-hidden1").show();
                }
            });
            $("#xt2").on("click", function(e) {
                e.preventDefault();
                count2 += 1;
                if (count2 < 4) {
                    $("#ph2").find(".product:hidden:lt(8)").fadeIn("slow");
                } else {
                    $("#xt2").hide();
                    $("#tx-hidden2").show();
                }
            });
        });
    </script>