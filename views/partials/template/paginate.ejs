<div class="row">
  <!-- hiển thị phân trang nếu có trang -->
  <% if(pages > 0) { %>
  <nav class="mx-auto">
    <ul class="pagination" style="margin-top: 2rem;">
      <!-- FIRST ITEM -->
      <% if(current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link" href="../<%=type%>/1">First</a>
          </li>
      <% } else { %>
          <li class="page-item">
            <a class="page-link" href="../<%=type%>/1">First</a>
          </li>
      <% } %>
      <!-- ITEMS  -->
      <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
      <% if(i !== 1) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">...</a>
          </li>
      <% } %>
      <% for(; i <= (Number(current) + 2) && i <= pages; i++) { %>
        <% if(i == current) { %>
          <li class="page-item active">
            <a class="page-link" href="../<%=type%>/<%= i %>">
              <%= i %>
            </a>
          </li>
      <% } else { %>
          <li class="page-item">
            <a class="page-link" href="../<%=type%>/<%= i %>">
              <%= i %>
            </a>
          </li>
      <% } %>
      <% if (i == Number(current) + 2 && i < pages) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">...</a>
          </li>
      <% } %>
      <% } %>
      <!-- LAST ITEM -->
      <% if(current == pages) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">
              Last
            </a>
          </li>
      <% } else { %>
          <li class="page-item">
            <a class="page-link" href="../<%=type%>/<%= pages %>">
              Last
            </a>
          </li>
      <% } %>
    </ul>
  </nav>
  <% } %>
</div>
