<script>
    $(document).ready(function() {
        $('.gallery').slick({
            infinite: false,
            lazyLoad: 'ondemand',
            slidesToShow: 2.4,
            slidesToScroll: 1,
            responsive: [{
                breakpoint: 990,
                settings: {
                    slidesToShow: 2
                }
            }]
        });
        $('.gallery-img').mouseenter(function() {
            $(this).addClass('is-hover');
        }).mouseleave(function() {
            $(this).removeClass('is-hover');
        })
        $('.gallery').mouseenter(function() {
